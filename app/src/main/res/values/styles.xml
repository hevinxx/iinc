<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="primaryColor">@color/primary</item>
        <item name="primaryColorSub">@color/primaryDark</item>
        <item name="accentColor">@color/accent</item>
        <item name="backgroundColor">@color/white</item>
        <item name="surfaceColor">@color/white</item>
        <item name="textColorOnPrimary">@color/white</item>
        <item name="textColorOnPrimarySub">@color/whiteGray</item>
        <item name="textColorOnBackground">@color/black</item>
        <item name="textColorOnBackgroundSub">@color/blackGray</item>
        <item name="textColorOnSurface">@color/black</item>
        <item name="textColorOnSurfaceSub">@color/blackGray</item>
        <item name="borderLineColor">@color/blackGray</item>
        <item name="borderLineColorSub">@color/whiteGray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
